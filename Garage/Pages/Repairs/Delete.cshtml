        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Repair.RepairDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Repair.RepairDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Repair.MileAge)
        </dt>
        <dd class="col-sm-10">
