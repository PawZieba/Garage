@page
@model Garage.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>
    @Models.Dictionary.delete @Models.Dictionary.ofcar
</h1>

<h3>@Models.Dictionary.deleteConfirmation</h3>
<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Models.Dictionary.producer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Producer)
        </dd>
        <dt class="col-sm-2">
            @Models.Dictionary.model
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Model)
        </dd>
        <dt class="col-sm-2">
            @Models.Dictionary.vin
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.VIN)
        </dd>
        <dt class="col-sm-2">
            @Models.Dictionary.licencePlate
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.LicencePlate)
        </dd>
        <dt class="col-sm-2">
            @Models.Dictionary.owner
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Customer.ID)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Car.ID" />
        <input type="submit" value=@Models.Dictionary.delete class="btn btn-danger mr-3" />
        <a asp-page="./Index">@Models.Dictionary.back</a>
    </form>
</div>
