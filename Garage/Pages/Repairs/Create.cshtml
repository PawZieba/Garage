@page
@model Garage.Pages.Repairs.CreateModel

@{
    ViewData["Title"] = @Models.Dictionary.create;
}

<h1>@Models.Dictionary.create @Models.Dictionary.ofrepair</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Models.Dictionary.repairDate
                <input asp-for="Repair.RepairDate" class="form-control" />
                <span asp-validation-for="Repair.RepairDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Models.Dictionary.mileAge
                <input asp-for="Repair.MileAge" class="form-control" />
                <span asp-validation-for="Repair.MileAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Models.Dictionary.description
                <input asp-for="Repair.Description" class="form-control" />
                <span asp-validation-for="Repair.Description" class="text-danger"></span>
            </div>
            <div class="d-flex align-items-center">
                <div class="form-group mr-3 mb-0">
                    <input type="submit" value=@Models.Dictionary.create class="btn btn-primary" />
                </div>
                <a asp-page="../Customers/Index">@Models.Dictionary.back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
