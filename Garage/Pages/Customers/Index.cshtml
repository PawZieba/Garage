@page
@model Garage.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Klienci";
}

<div class="header">
    <h1>@ViewData["Title"]</h1>

    <a asp-page="Create" class="btn btn-primary">@Models.Dictionary.addCustomer</a>
</div>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr class="table-info">
            <th>
                @Models.Dictionary.firstname
            </th>
            <th>
                @Models.Dictionary.lastname
            </th>
            <th>
                @Models.Dictionary.phone
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Customers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td class="text-center action-column">
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.ID">@Models.Dictionary.edit</a>
                    @*<a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.ID">Szczegóły</a>*@
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID">@Models.Dictionary.delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
